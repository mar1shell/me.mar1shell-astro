---
import GithubProjectsButton from "../../components/GithubProjectsButton/GithubProjectsButton.astro";
import ProjectCard from "../../components/ProjectCard/ProjectCard.tsx";
import SectionTitle from "../../components/SectionTitle/SectionTitle.astro";
import { projects } from "../../data";
---

<section id="projects-section" class="max-w-5xl px-4 py-6">
  <SectionTitle title="Projects" />

  <div class="grid gap-16">
    {
      projects.map((project, index) => (
        <ProjectCard project={project} index={index} client:visible />
      ))
    }
  </div>

  {/* More Projects Button */}
  <GithubProjectsButton />
</section>
