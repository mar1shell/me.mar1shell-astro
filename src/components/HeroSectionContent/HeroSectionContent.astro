---
import SocialMediaBar from "../../components/SocialMediaBar/SocialMediaBar";
import BookMeetingButton from "../../components/BookMeetingButton/BookMeetingButton";
import GetInTouchButton from "../../components/GetInTouchButton/GetInTouchButton.astro";
import GlitchText from "../GlithText/GlitchText.astro";
import TypewriterText from "../TypewriterText/TypewriterText";
import { glitchText, typewriterText } from "../../data";
---

<div
  class="flex flex-col items-center text-center md:col-span-3"
  data-aos="fade-up"
>
  <h1
    class="mb-4 text-4xl font-bold tracking-tight text-gray-900 md:text-6xl dark:text-white"
  >
    Hello, I'm <br class="md:hidden" />
    <GlitchText
      text={glitchText}
      customClass="font-display  bg-clip-text text-5xl font-extrabold md:text-7xl "
    />
  </h1>

  <h2
    class="mb-8 h-8 text-xl font-medium text-gray-700 md:text-2xl dark:text-gray-300"
  >
    I'm <TypewriterText strings={typewriterText} client:load />
  </h2>

  {/* Action Buttons */}
  <div
    class="mb-8 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-center"
  >
    <BookMeetingButton />
    <GetInTouchButton />
  </div>

  {/* Social media icons block */}
  <div class="flex items-center justify-center gap-6">
    <SocialMediaBar />
  </div>
</div>
