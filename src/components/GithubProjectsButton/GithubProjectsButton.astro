---
import { personalInfo } from "../../data";
import { ArrowRightIcon, GithubMoreProjectsIcon } from "../../icons";
---

<div class="pt-10 text-center" data-aos="fade-up">
  <a
    href={personalInfo.socialMedia.github}
    target="_blank"
    rel="noopener noreferrer"
    class="group/more inline-flex items-center rounded-full border-2 border-dashed border-blue-700 bg-white/80 px-8 py-4 font-semibold text-blue-700 backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:border-blue-600 hover:bg-blue-600 hover:text-white dark:border-gray-600 dark:bg-transparent dark:text-gray-300 dark:hover:border-green-400 dark:hover:bg-green-400/10 dark:hover:text-green-400"
  >
    <GithubMoreProjectsIcon />
    <span class="text-sm md:text-base"> View More Projects on GitHub </span>
    <ArrowRightIcon />
  </a>
</div>
